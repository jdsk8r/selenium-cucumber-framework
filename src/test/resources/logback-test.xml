<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %highlight(%-5level) %cyan(%logger{30}) - %msg %n</pattern>
        </encoder>
    </appender>
    <logger name="selenium" level="INFO"/>
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>